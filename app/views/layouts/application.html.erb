<!DOCTYPE html>
<html>
  <head>  
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <title>TodoApp</title>
  </head>

  <body>
    <% flash.each do |type, message| %>
      <div class="alert alert-<%= bootstrap_alert_class(type) %> alert-dismissible fade show">
        <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>

    <nav class="navbar navbar-expand-lg navbar-light tile-color border mb-4 rounded">
      <div class="container-fluid">        
        <%= link_to raw('<i class="fa-solid fa-list-check me-2"></i>ToDo App'), root_path, class: "navbar-brand" %>
        <div class="d-flex align-items-center">
          <% if current_user %>
            <%= link_to "ToDos", root_path, class: "btn text-dark btn-outline-light me-2" %>
            <%= link_to "Categories", categories_path, class: "btn text-dark btn-outline-light me-2" %>
            <%= link_to "Completed ToDos", completed_tasks_path, class: "btn text-dark btn-outline-light me-2" %>
            <%= link_to "Account", account_path, class: "btn text-dark btn-outline-light me-2" %>
          <% else %>
            <%= link_to "Login", login_path, class: "btn btn-outline-primary me-2" %>
            <%= link_to "Sign Up", sign_up_path, class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </nav>
    
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>
    
    <%= yield %>
  </body>
</html>