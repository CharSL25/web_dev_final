<h5> <%= current_user.first_name %>   <%= current_user.last_name %> </h5>

<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1><%= @task.title %></h1>
    <% if @task.category %>
      <p class="lead">Category: <%= @task.category.name %></p>
    <% end %>
  </div>


<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <%= link_to "Edit", edit_task_path(@task), class: "btn btn-outline-secondary me-2 " %>
  </div>
  <div>
    <%= button_to "Delete", @task, method: :delete, 
                  form: { data: { turbo_confirm: "Are you sure?" } }, 
                  class: "btn btn-outline-danger" %>
  </div>
</div>
</div>
<div class="card mb-4 <%= 'border-success' if @task.completed %> <%= 'border-danger' if @task.priority && !@task.completed %>">
  <div class="card-body">
    <div class="d-flex justify-content-between mb-3">
      <div>
        <span class="badge  <%= @task.completed ? 'bg-success' : (@task.priority ? 'bg-danger' : 'tile-color') %>">
          <%= @task.completed ? 'Completed' : (@task.priority ? 'Priority' : 'Pending') %>
        </span>
      </div>
      <div>
        <small class="text-muted">Created <%= time_ago_in_words(@task.created_at) %> ago</small>
      </div>
    </div>
    
    <p class="card-text"><%= simple_format(@task.description) %></p>
  </div>
</div>
